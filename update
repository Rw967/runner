<script>
    // Hintergrund-Sterne damit es nicht langweilig ist
    const bgCanvas = document.getElementById('bg-canvas');
    const bctx = bgCanvas.getContext('2d');
    let stars = [];

    function init() {
        bgCanvas.width = window.innerWidth;
        bgCanvas.height = window.innerHeight;
        stars = [];
        for(let i=0; i<80; i++) {
            stars.push({
                x: Math.random() * bgCanvas.width,
                y: Math.random() * bgCanvas.height,
                s: Math.random() * 2
            });
        }
    }

    function draw() {
        bctx.fillStyle = "#020617";
        bctx.fillRect(0,0,bgCanvas.width, bgCanvas.height);
        bctx.fillStyle = "white";
        stars.forEach(s => {
            s.y += s.s * 0.1;
            if(s.y > bgCanvas.height) s.y = 0;
            bctx.beginPath();
            bctx.arc(s.x, s.y, s.s/2, 0, Math.PI*2);
            bctx.fill();
        });
        requestAnimationFrame(draw);
    }

    // Deaktiviert alle Tastaturbefehle (F5, F12, etc. werden erschwert)
    window.addEventListener('keydown', function (e) {
        e.preventDefault();
        return false;
    });

    // Verhindert Rechtsklick
    window.oncontextmenu = function () {
        return false;
    }

    window.onresize = init;
    init();
    draw();
</script>

</body>
